<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="220dp"
    android:background="@drawable/ic_launcher_background">

    <ImageView
        android:id="@+id/drawer_header_image"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="100dp"
        android:src="@drawable/ic_face_black_36dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/drawer_header_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/primary_brown"
        android:textSize="@dimen/text_medium"
        app:layout_constraintLeft_toLeftOf="@id/drawer_header_image"
        app:layout_constraintRight_toRightOf="@id/drawer_header_image"
        app:layout_constraintTop_toBottomOf="@id/drawer_header_image" />


</androidx.constraintlayout.widget.ConstraintLayout>