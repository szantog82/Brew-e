<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary_brown">

    <ImageView
        android:id="@+id/browse_map_drink_menu_img"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_coffee_white_18dp"
        app:layout_constraintBottom_toTopOf="@id/browse_map_drink_menu_text"
        app:layout_constraintLeft_toLeftOf="@id/browse_map_drink_menu_text"
        app:layout_constraintRight_toRightOf="@id/browse_map_drink_menu_text" />

    <ImageView
        android:id="@+id/browse_map_blog_img"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_menu_book_white_18dp"
        app:layout_constraintBottom_toTopOf="@id/browse_map_blog_text"
        app:layout_constraintLeft_toLeftOf="@id/browse_map_blog_text"
        app:layout_constraintRight_toRightOf="@id/browse_map_blog_text" />

    <TextView
        android:id="@+id/browse_map_selected_shop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Espresso Embassy"
        android:textColor="@color/white"
        android:textSize="@dimen/text_small"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/browse_map_selected_shop_title" />

    <TextView
        android:id="@+id/browse_map_selected_shop_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1051, Arany János u. 3"
        android:textColor="@color/white"
        android:textSize="@dimen/text_small"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/browse_map_selected_shop" />

    <TextView
        android:id="@+id/browse_map_drink_menu_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        android:layout_marginStart="40dp"
        android:text="Itallap"
        android:textColor="@color/white"
        android:textSize="@dimen/text_small"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="Böngészés"
        android:textColor="@color/white"
        android:textSize="@dimen/text_big"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/browse_map_blog_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        android:layout_marginEnd="40dp"
        android:text="Blogok"
        android:textColor="@color/white"
        android:textSize="@dimen/text_small"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/browse_map_selected_shop_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Kiválasztott kávézó"
        android:textColor="@color/white"
        android:textSize="@dimen/text_medium"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/mapfragment" />

    <org.osmdroid.views.MapView
        android:id="@+id/mapfragment"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginBottom="100dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>